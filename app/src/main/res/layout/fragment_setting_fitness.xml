<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        style="@style/EsMaterial.CardView.Light.NoHorizontalMargin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <com.eaglesakura.andriders.ui.widget.AppHeaderView
                app:headerIcon="@mipmap/ic_menu_personal_small"
                app:headerText="フィットネスデータ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <LinearLayout
                style="@style/App.Theme.BasicSetting"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <LinearLayout
                    android:id="@+id/CycleComputer.Personal.Weight"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/EsMaterial.Navigation.MinHeight"
                    android:background="@drawable/esm_button_transparent_fill"
                    android:clickable="true"
                    android:orientation="horizontal">

                <android.support.v7.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="体重"/>

                <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/Setting.Personal.WeightValue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="60"/>

                <android.support.v7.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text=" kg"/>
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/CycleComputer.Personal.NormalHeartrate"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/EsMaterial.Navigation.MinHeight"
                    android:background="@drawable/esm_button_transparent_fill"
                    android:clickable="true"
                    android:orientation="horizontal">

                <android.support.v7.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="安静心拍数"/>

                <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/Setting.Personal.NormalHeartrateValue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="70"/>

                <android.support.v7.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text=" bpm"/>
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/CycleComputer.Personal.MaxHeartrate"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/EsMaterial.Navigation.MinHeight"
                    android:background="@drawable/esm_button_transparent_fill"
                    android:clickable="true"
                    android:orientation="horizontal">

                <android.support.v7.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="最大心拍数"/>

                <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/Setting.Personal.MaxHeartrateValue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="190"/>

                <android.support.v7.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text=" bpm"/>
            </LinearLayout>

            <android.support.v7.widget.AppCompatButton
                    android:id="@+id/Setting.Fitness.ConnectGoogleFit"
                    style="@style/App.Button.Normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:text="Google Fit 連携"/>

        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>
