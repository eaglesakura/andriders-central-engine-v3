<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/esmWindowBackgroundColorDark"
        android:orientation="vertical">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <android.support.design.widget.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/App.Theme.AppBarOverlay">

            <!-- Toolbar -->
            <android.support.v7.widget.Toolbar
                    android:id="@+id/EsMaterial_Toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    app:popupTheme="@style/App.Theme.PopupOverlay"/>

        </android.support.design.widget.AppBarLayout>

        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <LinearLayout
                    android:id="@+id/Content.List.Root"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"/>

        </ScrollView>
    </LinearLayout>

    <com.eaglesakura.material.widget.MaterialProgressView
            android:id="@+id/App.Progress"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
</FrameLayout>
