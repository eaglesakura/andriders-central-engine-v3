<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">

    <android.support.v7.widget.CardView android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="@dimen/EsMaterial.Button.Margin"
                                        android:padding="@dimen/EsMaterial.Button.Margin">

        <LinearLayout android:layout_width="match_parent"
                      android:orientation="vertical" android:layout_height="wrap_content">

            <LinearLayout android:layout_width="match_parent"
                          android:layout_marginBottom="@dimen/EsMaterial.Button.Margin"
                          android:orientation="horizontal"
                          android:layout_height="wrap_content">

                <ImageView android:layout_width="@dimen/EsMaterial.Navigation.MinHeight"
                           android:layout_margin="@dimen/EsMaterial.Button.Margin"
                           android:id="@+id/Extension.ItemSelector.Icon"
                           android:layout_height="@dimen/EsMaterial.Navigation.MinHeight"/>

                <TextView
                        android:id="@+id/Extension.ItemSelector.ExtensionName"
                        android:layout_margin="@dimen/EsMaterial.Button.Margin"
                        style="@style/EsMaterial.Font.Title.Card"
                        android:layout_gravity="center_vertical"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_width="match_parent" android:layout_height="wrap_content"/>

            </LinearLayout>
            <include layout="@layout/esm_material_separator"/>
            <LinearLayout android:layout_width="match_parent"
                          android:id="@+id/Extension.ItemSelector.Root"
                          android:orientation="vertical"
                          android:layout_marginLeft="@dimen/EsMaterial.Margin.KeyLine1Horizontal"
                          android:layout_height="wrap_content"></LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>
</FrameLayout>