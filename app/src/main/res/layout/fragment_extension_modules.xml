<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        style="@style/EsMaterial.CardView.Light.NoHorizontalMargin"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                <ImageView
                        android:id="@+id/Extension.Category.Icon"
                        android:layout_width="@dimen/EsMaterial.Header.Icon.Size"
                        android:layout_height="@dimen/EsMaterial.Header.Icon.Size"
                        android:layout_marginLeft="@dimen/EsMaterial.Button.Margin"
                        android:layout_marginTop="@dimen/EsMaterial.Button.Margin"
                        android:src="@drawable/ic_launcher"/>
            </FrameLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/EsMaterial.Button.Margin"
                    android:orientation="vertical">

                <TextView
                        android:id="@+id/Extension.Category.Name"
                        style="@style/EsMaterial.Font.Title.Card"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="top"
                        android:minHeight="@dimen/EsMaterial.Navigation.MinHeight"
                        android:text="Module Name"/>

                <TextView
                        android:id="@+id/Extension.Category.Info"
                        style="@style/EsMaterial.Font.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/EsMaterial.Margin.KeyLine1Horizontal"
                        android:text="Module Info"
                        android:visibility="gone"/>

                <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <LinearLayout
                            android:id="@+id/Extension.List.Root"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="@dimen/EsMaterial.Button.MinHeight"
                            android:orientation="vertical"/>
                </FrameLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>
