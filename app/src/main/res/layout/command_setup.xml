<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/esmWindowBackgroundColorDark"
        android:orientation="vertical">

    <android.support.design.widget.TabLayout
            app:tabBackground="?attr/colorPrimary"
            app:tabMode="fixed"
            app:tabSelectedTextColor="@color/EsMaterial.Red.50"
            app:tabTextColor="@color/EsMaterial.Red.200"
            app:tabIndicatorColor="@color/EsMaterial.Red.50"
            android:id="@+id/Content.PagerTab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <android.support.v4.view.ViewPager android:layout_width="match_parent"
                                       android:id="@+id/Content.Pager"
                                       android:layout_height="match_parent"/>
</LinearLayout>
