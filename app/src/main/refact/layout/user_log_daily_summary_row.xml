<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="info" type="com.eaglesakura.andriders.ui.binding.UserLogDate"/>
    </data>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                 android:orientation="vertical"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent">

        <android.support.v7.widget.CardView
                style="@style/EsMaterial.Widget.CardView.Light"
                android:clickable="true"

                android:layout_marginTop="@dimen/EsMaterial.Margin.KeyLine1Vertical"
                android:layout_marginBottom="@dimen/EsMaterial.Margin.KeyLine1Vertical"
                android:layout_marginLeft="@dimen/EsMaterial.Margin.KeyLine1Vertical"
                android:layout_marginRight="@dimen/EsMaterial.Margin.KeyLine1Vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <com.eaglesakura.andriders.ui.widget.AppHeaderView
                        app:headerIcon="@drawable/ic_record"
                        app:headerText="走行日"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                <LinearLayout
                        style="@style/App.Theme.BasicSetting"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/EsMaterial.Margin.KeyLine1Vertical"
                            android:layout_height="wrap_content">

                        <android.support.v7.widget.AppCompatTextView
                                android:layout_gravity="center_vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="セッション数"/>

                        <android.support.v7.widget.AppCompatTextView
                                android:layout_gravity="center_vertical"
                                android:gravity="right"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/Common.File.Load"/>
                    </LinearLayout>
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/EsMaterial.Margin.KeyLine1Vertical"
                            android:layout_height="wrap_content">

                        <android.support.v7.widget.AppCompatTextView
                                android:layout_gravity="center_vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="走行距離"/>

                        <android.support.v7.widget.AppCompatTextView
                                android:layout_gravity="center_vertical"
                                android:gravity="right"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/Common.File.Load"/>
                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/EsMaterial.Margin.KeyLine1Vertical"
                            android:layout_height="wrap_content">

                        <android.support.v7.widget.AppCompatTextView
                                android:layout_gravity="center_vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="合計時間"/>

                        <android.support.v7.widget.AppCompatTextView
                                android:layout_gravity="center_vertical"
                                android:gravity="right"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/Common.File.Load"/>
                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/EsMaterial.Margin.KeyLine1Vertical"
                            android:layout_height="wrap_content">

                        <android.support.v7.widget.AppCompatTextView
                                android:layout_gravity="center_vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="獲得標高"/>

                        <android.support.v7.widget.AppCompatTextView
                                android:layout_gravity="center_vertical"
                                android:gravity="right"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/Common.File.Load"/>
                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/EsMaterial.Margin.KeyLine1Vertical"
                            android:layout_height="wrap_content">

                        <android.support.v7.widget.AppCompatTextView
                                android:layout_gravity="center_vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="最高速度"/>

                        <android.support.v7.widget.AppCompatTextView
                                android:layout_gravity="center_vertical"
                                android:gravity="right"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/Common.File.Load"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>

    </FrameLayout>
</layout>